<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/banners.css">
    <title>banners</title>
</head>
<body>
<div class="container">
    <div class="nav">
        <% include components/login_top.ejs %>
    </div>
    <div class="main">
        <div class="add">
            <form action="?" method="post">
                <label for="title">标题</label><br>
                <textarea name="title" id="title" cols="30" rows="10"></textarea><br>
                <label for="description">描述</label><br>
                <textarea name="description" id="description" cols="30" rows="10"></textarea><br>
                <label for="href">链接</label><br>
                <textarea name="href" id="href" cols="30" rows="10"></textarea><br>
                <button type="submit">提交</button>
            </form>
        </div>
        <div class="content">
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>标题</th>
                        <th>描述</th>
                        <th>链接</th>
                        <th>修改</th>
                    </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < banners.length; i++) {%>
                    <tr>
                        <td><%= banners[i].ID%></td>
                        <td><%= banners[i].title%></td>
                        <td><%= banners[i].description%></td>
                        <td><%= banners[i].href%></td>
                        <td>
                            <button><a href="?act=mod&id=<%= banners[i].ID%>">修改</a></button>
                            <button><a href="?act=del&id=<%= banners[i].ID%>" onclick="return confirm('确定删除？')">删除</a></button>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="modified">
            <% if (typeof mod_data != 'undefined') { %>
                <div>
                    <form action="?" method="post">
                        <input type="hidden" name="mod_id" value="<%= mod_data.ID%>">
                        <label for="title">标题</label><br>
                        <textarea name="title" id="title" cols="50" rows="2"><%= mod_data.title%></textarea><br>
                        <label for="description">描述</label><br>
                        <textarea name="description" id="description" cols="50" rows="10"><%= mod_data.description%></textarea><br>
                        <label for="href">链接</label><br>
                        <input name="href" id="href" value="<%= mod_data.href%>"><br>
                        <button type="submit">提交</button>
                        <button><a href="?">取消</a></button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>