<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/custom.css">
    <title>custom</title>
</head>
<body>
<div class="container">
    <div class="nav">
        <% include components/login_top.ejs %>
    </div>
    <div class="main">
        <div class="add">
            <form action="?" method="post" enctype="multipart/form-data">
                <label for="title">标题</label><br>
                <textarea name="title" id="title" cols="100" rows="10"></textarea><br>
                <label for="description">描述</label><br>
                <textarea name="description" id="description" cols="100" rows="10"></textarea><br>
                <label for="href">头像</label><br>
                <input type="file" id="href" name="file1">
                <button type="submit">提交</button>
            </form>
        </div>
        <div class="content">
            <table border="1" width="100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>标题</th>
                    <th>描述</th>
                    <th>头像</th>
                    <th>修改</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < custom.length; i++) {%>
                    <tr>
                        <td><%= custom[i].ID%></td>
                        <td><%= custom[i].title%></td>
                        <td><%= custom[i].description%></td>
                        <td width="10%"><img width="50px" height="50px" src="/upload/<%= custom[i].src%>"></td>
                        <td width="10%">
                            <button><a href="?act=mod&id=<%= custom[i].ID%>">修改</a></button>
                            <button><a href="?act=del&id=<%= custom[i].ID%>" onclick="return confirm('确定删除？')">删除</a></button>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="modified">
            <% if (typeof mod_data != 'undefined') { %>
                <div>
                    <form action="?" method="post">
                        <input type="hidden" name="mod_id" value="<%= mod_data.ID%>">
                        <label for="title">标题</label><br>
                        <textarea name="title" id="title" cols="50" rows="2"><%= mod_data.title%></textarea><br>
                        <label for="description">描述</label><br>
                        <textarea name="description" id="description" cols="50" rows="10"><%= mod_data.description%></textarea><br>
                        <label for="href">头像</label><br>
                        <input type="file" name="file1" id="href" ><br>
                        <button type="submit">提交</button>
                        <button><a href="?">取消</a></button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>